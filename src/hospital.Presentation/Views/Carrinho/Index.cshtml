@model mvc.ViewModels.CarrinhoViewModel


@{
    ViewData["Title"] = "Carrinho de compras ";
}

<div class="row">
    <div class="col-md-12">
        <h3>
            @Model.Mensagem
        </h3>
        <div>
            <h3>Carrinho de compras</h3>
        </div>
        <div class="panel panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Produtos</th>
                        <th>Valor</th>
                        <th>Estoque</th>
                        <th>Validade</th>
                        <th>Tem em Estoque</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prod in Model.Produtos)
                    {
                        <tr>
                            <td>@prod.Nome</td>
                            <td>@prod.Valor</td>
                            <td>@prod.Estoque </td>
                            <td>@prod.Validade</td>
                            <td>@prod.TemEmEstoque</td>
                        </tr>
                    }
                </tbody>
                <tfooot>
                    <tr>
                        <td><strong>Total:</strong></td>
                        <td><strong>@Model.TotalCarrinho </strong></td>
                    </tr>
                </tfooot>
            </table>
        </div>
    </div>

</div>